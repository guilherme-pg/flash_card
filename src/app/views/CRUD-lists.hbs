<main>
    
    <section>

        <div class="container_buttons_menu">

            <div class="container_lists_lists">
                {{#each files}}
                    <input type="radio" class="input_file" id="input_file_{{@index}}" name="option_file" value="{{file}}">
                    <label class="file_name" for="input_file_{{@index}}">{{file}}</label>
                {{/each}}
            </div>


            <div class="container_buttons_lists">
                <input type="submit" class="general_button button_menu_lists" value="Go"></input>
                <input type="submit" class="general_button button_menu_lists" value="Delete"></input>
            </div>
            
        </div>


        <form class="container_new_list" action="/createlist" method="post">
            <div class="input_list_name">
                <h3>List Name</h3>
                <input class="input_new_list" name="name_list" type="text">
            </div>


            <div class="container_list_types">
                <h3>List Type</h3>
                <div class="container_inputs">

                    <input type="radio" class="input_option" id="option_flash_card" name="option_activity" value="Flash Cards">
                    <label class="general_button button_option" for="option_flash_card">Flash Card</label>

                    <input type="radio" class="input_option" id="option_multipleChoice" name="option_activity" value="Multiple Choice">
                    <label class="general_button button_option" for="option_multipleChoice">Multiple Choice</label>

                    <input type="radio" class="input_option" id="option_true_false" name="option_activity" value="True or False">
                    <label class="general_button button_option" for="option_true_false">True or False</label>

                </div>
            </div>

            
            <input type="submit" class="general_button button_menu_lists" value="New List">
        </form>

    </section>

</main>
{{> scripts }}